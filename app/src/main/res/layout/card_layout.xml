<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardBackgroundColor="@color/pink"
    card_view:cardCornerRadius="12dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <TextView
            android:id="@+id/book_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            card_view:layout_constraintEnd_toStartOf="@+id/title_id"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            tools:text="Book ID" />

        <TextView
            android:id="@+id/title_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toEndOf="@+id/book_id"
            card_view:layout_constraintTop_toTopOf="parent"
            tools:text="Title" />

        <TextView
            android:id="@+id/isbn_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toEndOf="@+id/author_id"
            card_view:layout_constraintTop_toBottomOf="@+id/title_id"
            tools:text="ISBN" />

        <TextView
            android:id="@+id/author_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            card_view:layout_constraintEnd_toStartOf="@+id/isbn_id"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/book_id"
            tools:text="Author" />

        <TextView
            android:id="@+id/description_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            card_view:layout_constraintEnd_toStartOf="@+id/price_id"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/author_id"
            tools:text="Description" />

        <TextView
            android:id="@+id/price_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toEndOf="@+id/description_id"
            card_view:layout_constraintTop_toBottomOf="@+id/isbn_id"
            tools:text="Price" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>